<h1>Login page</h1>

<%= form_for :session, url: "/login" do |f| %>

  <%= f.label :user_name %>
  <%= f.text_field :user_name %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <% if flash[:errors] %>
      <% flash[:errors].each do |error| %>
        <p><%= error %></p>
      <% end %>
  <% end %>

  <%= f.submit 'Login' %>
<% end %>

<p><%= link_to "Create account", new_user_path %></p>
